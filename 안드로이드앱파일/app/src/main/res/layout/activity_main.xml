<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2">

    <TextView
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="70sp"
        android:textColor="#020236"
        android:fontFamily="@font/iotfont2"
        android:text="스마트 알약 비서" />

    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/textView"
        android:layout_marginTop="20dp"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iotfont2"
        android:textStyle="bold"
        android:textColor="#020236"
        android:text="무엇을 도와드릴까요?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/iotfont2"
                android:textStyle="bold"
                android:textColor="#341a40"
                android:text="복용 시간을 설정하고 싶어"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/iotfont2"
                android:textStyle="bold"
                android:textColor="#341a40"
                android:text="내가 먹는 약이 어떤 약일까?"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/iotfont2"
                android:textStyle="bold"
                android:textColor="#341a40"
                android:text="복용하는 약의 정보를 알려줘"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/iotfont2"
                android:textStyle="bold"
                android:textColor="#341a40"
                android:text="지금 약 먹을래. 약 줘"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/iotfont2"
                android:textStyle="bold"
                android:textColor="#341a40"
                android:text="약통의 현황을 알고 싶어"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                android:id="@+id/btn_alarm"
                android:scaleType="fitCenter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#00ff0000"
                app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

            <ImageButton
                android:id="@+id/btn_photo"
                android:scaleType="fitCenter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#00ff0000"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@android:drawable/ic_menu_camera" />

            <ImageButton
                android:id="@+id/btn_showPillInfo"
                android:scaleType="fitCenter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#00ff0000"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                app:srcCompat="?android:attr/actionModeFindDrawable" />

            <ImageButton
                android:id="@+id/btn_giveMe"
                android:scaleType="fitCenter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#00ff0000"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                app:srcCompat="?android:attr/fingerprintAuthDrawable" />

            <ImageButton
                android:id="@+id/btn_present"
                android:scaleType="fitCenter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#00ff0000"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@android:drawable/ic_menu_info_details" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>